@using BusinessLayer
@model List<int>

@{
    var member = PublicUser.GetCurrentUser();
    var orderHandler = new OrderHandler();
    var list = orderHandler.GetOrderIds(member.MemberId);
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}

<div class="container">
    <h4>Orders</h4><br />
    @foreach (var id in list)
    {
        @Html.ActionLink("Show", "Orders", new { orderId = id });
    }
</div>
