@using WebApp
@model WebApp.Models.MemberModel

@{
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h3>My Profile</h3>
            <br />

            @using (Html.BeginForm("Edit", "Account", FormMethod.Post))
            {
                @Html.HiddenFor(m => m.MemberId)

                <div class="row">
                    <div class="col-md-2">@Html.Label("Name")</div>
                    <div class="col-md-3">@Html.TextBoxFor(u => u.MemberName, new { @class = "form-control" })</div>
                    <div class="col-md-3">@Html.ValidationMessageFor(u => u.MemberName)</div>
                </div>
                <div class="mt10 row">
                    <div class="col-md-2">@Html.Label("Email")</div>
                    <div class="col-md-3">@Html.TextBoxFor(u => u.EmailAddress, new { Class = "form-control" })</div>
                    <div class="col-md-3">@Html.ValidationMessageFor(u => u.EmailAddress)</div>
                </div>
                 <div class="mt10 row">
                    <div class="col-md-2">@Html.Label("Password")</div>
                    <div class="col-md-3">@Html.PasswordFor(u => u.Password, new { Class = "form-control" })</div>
                    <div class="col-md-3">@Html.ValidationMessageFor(u => u.Password)</div>
                </div><br />
                <input type="submit" value="Save" class="mt10 btn btn-primary" /><span>&nbsp;&nbsp;</span>
                @Html.ActionLink("Back", "Index", null, new { @class = "mt10 btn btn-primary" })

            }<br /><br />
        </div>
    </div>
</div>
